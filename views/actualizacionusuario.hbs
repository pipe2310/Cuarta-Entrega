{{>header}}

<center><h1>Actualización de Usuarios</h1></center>

<div class="container">
  <form class="form-horizontal" action="/actualizacionusuarios" method="post" >
    <div class="form-group">
      <label class="control-label col-sm-2" for="id">Documento de identidad:</label>
      <div class="col-sm-10">
        <input type="number" class="form-control" placeholder="Ingrese su documento de identidad" name="id" value="{{{documento}}}" required="required" readonly="true">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="id">Nombre:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" placeholder="Ingrese su nombre" name="nombre" value="{{{nombre}}}"  required="required">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="id">Correo:</label>
      <div class="col-sm-10">
        <input type="email" class="form-control" placeholder="Ingrese su correo electrónico" name="correo" value="{{{correo}}}"  required="required">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="id">Teléfono:</label>
      <div class="col-sm-10">
        <input type="number" class="form-control" placeholder="Ingrese su número de teléfono" name="telefono" value="{{{telefono}}}"  required="required">
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <label for="tipo">Tipo:</label>
        <select name="tipo" class="form-control" >  
          <option value="Coordinador">Coordinador</option> 
          <option value="Aspirante">Aspirante</option> 
        </select>
      </div>
    </div>
    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
       <center> <button type="submit" class="btn btn-default">Actualizar</button></center>
      </div>
    </div>
  </form>
</div>

{{>footer}}